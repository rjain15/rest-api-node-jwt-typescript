{
  "name": "rest-api-node-jwt-typescript",
  "version": "0.1.0",
  "description": "A Rest-API written in TypeScript using Node.js/express and secured by API-Key & JWT",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "watch-node": "sleep 5 && nodemon dist/server.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "@types/bcrypt-nodejs": "0.0.31",
    "@types/compression": "1.7.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/mongoose": "^5.7.12",
    "@types/node": "^13.13.1",
    "@types/passport": "^1.0.3",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/uuid": "^7.0.2",
    "bcrypt-nodejs": "0.0.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mongoose": "^5.9.10",
    "nodemon": "^2.0.3",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "typescript": "^3.8.3",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "tslint": "^6.1.1"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Philippe-Collignon/rest-api-node-jwt-typescript.git"
  },
  "author": "philippe@collignon.email",
  "license": "MIT"
}
